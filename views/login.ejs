<%- include('partials/header') %>

<div class="min-h-screen flex items-center justify-center p-4">
    <form method="post" action="/login" class="w-full max-w-md bg-gray-800 rounded-xl p-6 md:p-8 border border-gray-700">
        <h2 class="text-xl md:text-2xl font-bold text-white text-center mb-4">Login</h2>
        
        <% if(error) { %>
            <p class='text-red-500 text-center mb-4 text-sm'><%= error %></p>
        <% } %>

        <div class="space-y-4">
            <div>
                <label class="block text-sm text-gray-300 mb-1">Email</label>
                <input type="email" name="email"
                       class="w-full px-4 py-2.5 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500"
                       placeholder="Your email" required>
            </div>

            <div>
                <label class="block text-sm text-gray-300 mb-1">Password</label>
                <input type="password" name="password"
                       class="w-full px-4 py-2.5 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500"
                       placeholder="Your password" required>
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 hover:bg-blue-500 text-white py-2.5 px-4 rounded-lg transition">
                Login
            </button>
            
            
            <p class="text-center text-white">Don't have account <a class="text-blue-400 hover:underline underline" href="/register">Register</a></p>
            
            
        </div>
    </form>
</div>

<%- include('partials/footer') %>