<%- include('partials/header', {title: 'Home Page'}) %>


 <%- include('partials/hero') %>

<main class="min-h-screen bg-gradient-to-b from-gray-900 to-black p-2 md:p-6">

    <!-- Products Section -->
    <%
        if(posts && posts.length > 0) {
            // 1. Reverse the posts array
            const reversedPosts = [...posts].reverse();

            // 2. Group posts by category
            const categories = {};
            reversedPosts.forEach(post => {
                if (!categories[post.category]) {
                    categories[post.category] = [];
                }
                categories[post.category].push(post);
            });

            // 3. Initialize limit per category (10 initially)
            let limitPerCategory = 10;
    %>

    <section class="mb-12">
        <div class="flex flex-col md:flex-row md:items-center justify-between mb-8 px-2 md:px-4">
            <h2 class="text-2xl md:text-3xl font-bold text-white mb-4 md:mb-0">Our Products</h2>
            <div class="flex items-center space-x-4">
                <span class="text-gray-300 hidden md:block">Sort by:</span>
                <select id="sortSelect" class="bg-gray-800 cursor-pointer text-white rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-orange-500">
                    <option class="cursor-pointer" value="featured">Featured</option>
                    <option class="cursor-pointer" value="price-low">Price: Low to High</option>
                    <option class="cursor-pointer" value="price-high">Price: High to Low</option>
                    <option class="cursor-pointer" value="name">Name A-Z</option>
                </select>
            </div>
        </div>

        <!-- Display products by category -->
        <% Object.keys(categories).forEach((category, catIndex) => {
            const categoryProducts = categories[category];
            const displayedProducts = categoryProducts.slice(0, limitPerCategory);
        %>

        <div class="mb-12">
            <div class="flex items-center justify-between mb-6 px-2 md:px-4">
                <h3 class="text-xl md:text-2xl font-bold text-white flex items-center gap-2">
                    <span class="bg-gradient-to-r from-orange-600 to-red-600 p-2 rounded-lg">
                        <i class="fas fa-tag"></i>
                    </span>
                    <%= category %>
                    <span class="text-sm text-gray-400 bg-gray-800 px-3 py-1 rounded-full">
                        <%= categoryProducts.length %> products
                    </span>
                </h3>
            </div>

            <div id="category-<%= catIndex %>" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-3 lg:grid-cols-3 xl:grid-cols-4 gap-2 md:gap-6 px-2 md:px-0">
                <% displayedProducts.forEach(function(post, index) { %>
                    <div class="group bg-gray-800/50 backdrop-blur-sm rounded-2xl overflow-hidden hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 border border-gray-700 hover:border-orange-500/50">
                        <div class="relative overflow-hidden">
                            <img class="w-full h-44 md:h-64 group-hover:scale-110 transition-transform duration-500" src="<%= post.imgUrl %>" alt="<%= post.name %>" loading="lazy">
                            <div class="absolute top-3 right-3 bg-gray-900/80 backdrop-blur-sm text-white text-xs font-semibold px-3 py-1 rounded-full">
                                <%= post.category %>
                            </div>
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                        </div>

                        <div class="p-3 md:p-5 flex flex-col">
                            <h3 class="text-white font-semibold text-lg mb-0 line-clamp-1"><%= post.name %></h3>

                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-green-400 text-xl font-bold">৳<%= post.price %></p>
                                    <% if(post.originalPrice) { %>
                                        <p class="text-gray-500 text-sm line-through">৳<%= post.originalPrice %></p>
                                    <% } %>
                                </div>

                                <div class="flex space-x-2">
                                    <a href='/products/<%= post._id %>' class="bg-gray-700 hover:bg-gray-600 text-white p-2 rounded-full transition">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                        </svg>
                                    </a>
                                </div>
                            </div>

                            <% if (isLoggedIn) { %>
                                <a onclick="addToCartSimple('<%= post._id %>', this)"
                                   class="w-full text-center cursor-pointer
                                          bg-gradient-to-r from-orange-600 to-red-600
                                          hover:from-orange-500 hover:to-red-500
                                          text-white font-semibold py-2 px-3 rounded-xl mt-4 transition-all duration-300 transform hover:shadow-lg hover:shadow-orange-500/30">
                                    <i class="fas fa-shopping-cart group-hover:scale-110 transition-transform"></i>
                                    <span>Add to Cart</span>
                                </a>
                            <% } else { %>
                                <span onclick='salert()'
                                     class="w-full text-center cursor-pointer
                                            bg-gradient-to-r from-orange-600 to-red-600
                                            hover:from-orange-500 hover:to-red-500
                                            text-white font-semibold py-2 px-3 rounded-xl mt-4 transition-all duration-300 transform hover:shadow-lg hover:shadow-orange-500/30">
                                    Add to Cart
                                </span>
                            <% } %>
                        </div>
                    </div>
                <% }) %>
            </div>

            <% if (categoryProducts.length > displayedProducts.length) { %>
                <div class="text-center mt-6">
                    <button onclick="loadMoreCategory('<%= catIndex %>', '<%= category %>')"
                            class="bg-gray-800 hover:bg-gray-700 text-white font-semibold py-2 px-6 rounded-full transition-all duration-300 border border-gray-700 hover:border-orange-500">
                        Load More in <%= category %> (+<%= categoryProducts.length - displayedProducts.length %>)
                    </button>
                </div>
            <% } %>
        </div>
        <% }) %>

        <div class="flex justify-center mt-12">
            <button id="loadMoreAll"
                    onclick="loadMoreAllCategories()"
                    class="bg-gradient-to-r from-orange-600 to-red-600 hover:from-orange-500 hover:to-red-500 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300 border border-orange-500 hover:border-orange-400 shadow-lg hover:shadow-orange-500/30">
                <i class="fas fa-sync-alt mr-2"></i> Load More in All Categories (+10 Each)
            </button>
        </div>

    </section>

    <% } else { %>
        <div class="col-span-full flex flex-col items-center justify-center py-16 px-4 text-center">
            <div class="w-24 h-24 mb-6 text-gray-600">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                </svg>
            </div>
            <h3 class="text-2xl font-bold text-white mb-2">No Products Available</h3>
            <p class="text-gray-400 max-w-md">Check back soon for our latest collection of premium products.</p>
        </div>
    <% } %>
</main>

<style>
    .line-clamp-1 {
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 1;
    }

    ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
    }

    ::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }

    ::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, #f97316, #dc2626);
        border-radius: 10px;
    }

    #scroller {
        will-change: transform;
        transition: transform 0.1s linear;
    }
</style>

<script>
    const images = [
        'https://images.unsplash.com/photo-1541140532154-b024d705b90a?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1608043152269-423dbba4e7e1?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1496181133206-80ce9b88a853?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1489987707025-afc232f7ea0f?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=600&h=400&fit=crop&auto=format'
    ];

    // Scroller functionality
    const scroller = document.getElementById('scroller');
    const playBtn = document.getElementById('playBtn');
    const pauseBtn = document.getElementById('pauseBtn');

    let pos = 0;
    let paused = false;
    let animationId;
    const scrollSpeed = 1;
    const scrollWidth = images.length * 280;

    // Create image elements
    images.concat(images).forEach((img, index) => {
        const container = document.createElement('div');
        container.className = 'relative flex-shrink-0 group cursor-pointer';
        container.style.width = '260px';

        const imgEl = document.createElement('img');
        imgEl.src = img;
        imgEl.className = 'w-full h-72 md:h-80 object-cover rounded-2xl shadow-2xl group-hover:scale-105 transition-transform duration-500';
        imgEl.loading = 'lazy';

        const overlay = document.createElement('div');
        overlay.className = 'absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300';

        const text = document.createElement('div');
        text.className = 'absolute bottom-6 left-6 right-6 text-white transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300';
        text.innerHTML = `
            <h3 class="font-bold text-xl mb-1">Featured Item ${(index % images.length) + 1}</h3>
            <p class="text-sm text-gray-200">Discover premium quality</p>
        `;

        container.appendChild(imgEl);
        container.appendChild(overlay);
        container.appendChild(text);
        scroller.appendChild(container);
    });

    function animateScroll() {
        if (!paused) {
            pos -= scrollSpeed;
            if (pos <= -scrollWidth) pos = 0;
            scroller.style.transform = `translateX(${pos}px)`;

            const activeIndex = Math.floor(Math.abs(pos) / 280) % images.length;
            document.querySelectorAll('.scroller-dot').forEach((dot, index) => {
                dot.classList.toggle('bg-orange-500', index === activeIndex);
                dot.classList.toggle('w-4', index === activeIndex);
                dot.classList.toggle('w-2', index !== activeIndex);
            });
        }
        animationId = requestAnimationFrame(animateScroll);
    }

    playBtn.addEventListener('click', () => {
        paused = false;
        playBtn.classList.add('bg-orange-600');
        pauseBtn.classList.remove('bg-orange-600');
        pauseBtn.classList.add('bg-gray-800');
    });

    pauseBtn.addEventListener('click', () => {
        paused = true;
        pauseBtn.classList.add('bg-orange-600');
        playBtn.classList.remove('bg-orange-600');
        playBtn.classList.add('bg-gray-800');
    });

    scroller.addEventListener('mouseenter', () => {
        if (!paused) {
            playBtn.classList.remove('bg-orange-600');
            pauseBtn.classList.add('bg-orange-600');
        }
        paused = true;
    });

    scroller.addEventListener('mouseleave', () => {
        if (pauseBtn.classList.contains('bg-orange-600')) {
            paused = false;
            pauseBtn.classList.remove('bg-orange-600');
            playBtn.classList.add('bg-orange-600');
        }
    });

    // Sort functionality
    const sortSelect = document.getElementById('sortSelect');
    if (sortSelect) {
        sortSelect.addEventListener('change', function() {
            // This would need server-side implementation for proper sorting
            // For now, just reload the page with sort parameter
            window.location.href = `/?sort=${this.value}`;
        });
    }

    // Load more products functionality
    let limitPerCategory = 10;

    function loadMoreCategory(catIndex, category) {
        const categoryDiv = document.getElementById(`category-${catIndex}`);
        const loadMoreBtn = categoryDiv.parentElement.querySelector('button');

        // Show loading state
        const originalText = loadMoreBtn.innerHTML;
        loadMoreBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Loading...';
        loadMoreBtn.disabled = true;

        // Simulate loading more products
        setTimeout(() => {
            // In real app, fetch more products from server
            // For demo, we'll just increase the limit
            limitPerCategory += 10;

            // Reload the page with new limit (in real app, use AJAX)
            window.location.href = `/?limit=${limitPerCategory}`;
        }, 1000);
    }

    function loadMoreAllCategories() {
        const loadMoreBtn = document.getElementById('loadMoreAll');

        // Show loading state
        const originalText = loadMoreBtn.innerHTML;
        loadMoreBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Loading More Products...';
        loadMoreBtn.disabled = true;

        // Simulate loading
        setTimeout(() => {
            limitPerCategory += 10;
            // Reload the page with new limit (in real app, use AJAX)
            window.location.href = `/?limit=${limitPerCategory}`;
        }, 1500);
    }

    // Cart functionality
    function addToCartSimple(productId, button) {
        button.style.transform = 'scale(0.98)';

        Swal.fire({
            icon: 'success',
            title: '<div class="flex items-center gap-2 justify-center"><i class="fas fa-check-circle text-green-500 text-2xl"></i><span>Added to Cart!</span></div>',
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            background: '#ffffff',
            color: '#1f2937',
            width: '350px',
            padding: '1.5rem',
            customClass: {
                popup: 'rounded-2xl shadow-2xl'
            }
        }).then(() => {
            window.location.href = `/cart/${productId}`;
        });
    }

    function salert() {
        Swal.fire({
            title: 'Login Required',
            text: 'Please login to add items to cart',
            icon: 'warning',
            confirmButtonText: 'Login',
            confirmButtonColor: '#f97316'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/login';
            }
        });
    }

    // Initialize
    animateScroll();

    document.addEventListener('visibilitychange', () => {
        if (document.hidden) {
            paused = true;
        }
    });
</script>


<%- include('partials/footer') %>