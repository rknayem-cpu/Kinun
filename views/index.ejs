            <% } %>
        </div>
        
        <% if(posts && posts.length > 0) { %>
            <div class="flex justify-center mt-12">
                <button id="loadMore" class="bg-gray-800 hover:bg-gray-700 text-white font-semibold py-3 px-8 rounded-full transition-all duration-300 border border-gray-700 hover:border-orange-500">
