        width: 8px;
        height: 8px;
    }
    
    ::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
    }
    
    ::-webkit-scrollbar-thumb {
        background: linear-gradient(to bottom, #f97316, #dc2626);
        border-radius: 10px;
    }
    
    /* Responsive breakpoints */
    @media (min-width: 475px) {
        .xs\:grid-cols-2 {
            grid-template-columns: repeat(2, minmax(0, 1fr));
        }
    }
    
    /* Scroller animation enhancement */
    #scroller {
        will-change: transform;
        transition: transform 0.1s linear;
    }
</style>

<script>
    const images = [
        'https://images.unsplash.com/photo-1541140532154-b024d705b90a?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1608043152269-423dbba4e7e1?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1496181133206-80ce9b88a853?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1489987707025-afc232f7ea0f?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1542291026-7eec264c27ff?w=600&h=400&fit=crop&auto=format',
        'https://images.unsplash.com/photo-1523275335684-37898b6baf30?w=600&h=400&fit=crop&auto=format'
    ];

    const scroller = document.getElementById('scroller');
    const playBtn = document.getElementById('playBtn');
    const pauseBtn = document.getElementById('pauseBtn');
    const sortSelect = document.getElementById('sortSelect');
    const loadMoreBtn = document.getElementById('loadMore');
    
    let pos = 0;
    let paused = false;
    let animationId;
    const scrollSpeed = 1;
    const scrollWidth = images.length * 280; // Adjusted for larger images
    
    // Create image elements with enhanced styling
    images.concat(images).forEach((img, index) => {
        const container = document.createElement('div');
        container.className = 'relative flex-shrink-0 group cursor-pointer';
        container.style.width = '260px';
        
        const imgEl = document.createElement('img');
        imgEl.src = img;
        imgEl.className = 'w-full h-72 md:h-80 object-cover rounded-2xl shadow-2xl group-hover:scale-105 transition-transform duration-500';
        imgEl.loading = 'lazy';
        
        const overlay = document.createElement('div');
        overlay.className = 'absolute inset-0 bg-gradient-to-t from-black/70 via-transparent to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300';
        
        const text = document.createElement('div');
        text.className = 'absolute bottom-6 left-6 right-6 text-white transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300';
        text.innerHTML = `
            <h3 class="font-bold text-xl mb-1">Featured Item ${(index % images.length) + 1}</h3>
            <p class="text-sm text-gray-200">Discover premium quality</p>
        `;
        
        container.appendChild(imgEl);
        container.appendChild(overlay);
        container.appendChild(text);
        scroller.appendChild(container);
    });
    
    // Auto scroll animation with smooth easing
    function animateScroll() {
        if (!paused) {
            pos -= scrollSpeed;
            if (pos <= -scrollWidth) pos = 0;
            scroller.style.transform = `translateX(${pos}px)`;
            
            // Update active dot indicator
            const activeIndex = Math.floor(Math.abs(pos) / 280) % images.length;
            document.querySelectorAll('.scroller-dot').forEach((dot, index) => {
                dot.classList.toggle('bg-orange-500', index === activeIndex);
                dot.classList.toggle('w-4', index === activeIndex);
                dot.classList.toggle('w-2', index !== activeIndex);
            });
        }
        animationId = requestAnimationFrame(animateScroll);
    }
    
    // Control buttons functionality
    playBtn.addEventListener('click', () => {
        paused = false;
        playBtn.classList.add('bg-orange-600');
        pauseBtn.classList.remove('bg-orange-600');
        pauseBtn.classList.add('bg-gray-800');
    });
    
    pauseBtn.addEventListener('click', () => {
        paused = true;
        pauseBtn.classList.add('bg-orange-600');
        playBtn.classList.remove('bg-orange-600');
        playBtn.classList.add('bg-gray-800');
    });
    
    // Hover control for scroller
    scroller.addEventListener('mouseenter', () => {
        if (!paused) {
            playBtn.classList.remove('bg-orange-600');
            pauseBtn.classList.add('bg-orange-600');
        }
        paused = true;
    });
    
    scroller.addEventListener('mouseleave', () => {
        if (pauseBtn.classList.contains('bg-orange-600')) {
            paused = false;
            pauseBtn.classList.remove('bg-orange-600');
            playBtn.classList.add('bg-orange-600');
        }
    });
    
    // Sort functionality
    if (sortSelect) {
        sortSelect.addEventListener('change', function() {
            const itemsContainer = document.getElementById('items');
            const items = Array.from(itemsContainer.querySelectorAll('.group'));
            
            items.sort((a, b) => {
                const priceA = parseFloat(a.querySelector('.font-bold').textContent.replace('৳', ''));
                const priceB = parseFloat(b.querySelector('.font-bold').textContent.replace('৳', ''));
                const nameA = a.querySelector('h3').textContent.toLowerCase();
                const nameB = b.querySelector('h3').textContent.toLowerCase();
                
                switch(this.value) {
                    case 'price-low':
                        return priceA - priceB;
                    case 'price-high':
                        return priceB - priceA;
                    case 'name':
                        return nameA.localeCompare(nameB);
                    default:
                        return 0;
                }
            });
            
            // Reorder items with animation
            items.forEach(item => {
                item.style.opacity = '0';
                item.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    itemsContainer.appendChild(item);
                    item.style.opacity = '1';
                    item.style.transform = 'translateY(0)';
                }, 50);
            });
        });
    }
    
    // Load more functionality
    if (loadMoreBtn) {
        loadMoreBtn.addEventListener('click', function() {
            this.textContent = 'Loading...';
            this.disabled = true;
            
            // Simulate loading more products
            setTimeout(() => {
                // In a real app, you would fetch more products from the server
                this.textContent = 'No More Products';
                this.classList.remove('hover:bg-gray-700', 'hover:border-orange-500');
                this.classList.add('opacity-50', 'cursor-not-allowed');
            }, 1500);
        });
    }
    
    // Initialize
    animateScroll();
    
    // Pause animation when tab is not visible
    document.addEventListener('visibilitychange', () => {
        if (document.hidden) {
            paused = true;
        }
    });
</script>


