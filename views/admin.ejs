<%- include('partials/header', {title: 'Admin Orders'}) %>

<div class="min-h-screen bg-gray-100 p-4">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-2xl font-bold mb-4">All Orders</h1>
        
        <div id="ordersTable" class="bg-white rounded-lg shadow overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="p-3 text-left">Order ID</th>
                        <th class="p-3 text-left">Customer</th>
                        <th class="p-3 text-left">Date</th>
                        <th class="p-3 text-left">Total</th>
                        <th class="p-3 text-left">Status</th>
                        <th class="p-3 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody id="ordersBody">
                    <!-- Orders will load here -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    // Load all orders
    async function loadOrders() {
        const res = await fetch('/admin');
        const data = await res.json();
        
        if(data.success) {
            renderOrders(data.orders);
        }
    }

    // Render orders
    function renderOrders(orders) {
        const body = document.getElementById('ordersBody');
        body.innerHTML = orders.map(order => `
            <tr class="border-b hover:bg-gray-50">
                <td class="p-3">${order.orderId}</td>
                <td class="p-3">${order.user?.name || 'Guest'}</td>
                <td class="p-3">${new Date(order.createdAt).toLocaleDateString()}</td>
                <td class="p-3">à§³${order.totalAmount}</td>
                <td class="p-3">
                    <span class="px-2 py-1 rounded text-sm ${getStatusClass(order.status)}">
                        ${order.status}
                    </span>
                </td>
                <td class="p-3">
                    <button onclick="editStatus('${order._id}', '${order.status}')" 
                            class="text-blue-600 hover:text-blue-800 mr-2">
                        Edit
                    </button>
                    <button onclick="deleteOrder('${order._id}')" 
                            class="text-red-600 hover:text-red-800">
                        Delete
                    </button>
                </td>
            </tr>
        `).join('');
    }

    // Status colors
    function getStatusClass(status) {
        const colors = {
            pending: 'bg-yellow-100 text-yellow-800',
            confirmed: 'bg-blue-100 text-blue-800',
            processing: 'bg-purple-100 text-purple-800',
            shipped: 'bg-indigo-100 text-indigo-800',
            delivered: 'bg-green-100 text-green-800',
            cancelled: 'bg-red-100 text-red-800'
        };
        return colors[status] || 'bg-gray-100';
    }

    // Edit status
    async function editStatus(orderId, currentStatus) {
        const newStatus = prompt('Enter new status (pending, confirmed, processing, shipped, delivered, cancelled):', currentStatus);
        
        if(newStatus && newStatus !== currentStatus) {
            const res = await fetch(`/api/admin/orders/${orderId}/status`, {
                method: 'PUT',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({status: newStatus})
            });
            
            const data = await res.json();
            if(data.success) {
                alert('Status updated');
                loadOrders();
            }
        }
    }

    // Delete order
    async function deleteOrder(orderId) {
        if(confirm('Delete this order?')) {
            const res = await fetch(`/api/admin/orders/${orderId}`, {method: 'DELETE'});
            const data = await res.json();
            if(data.success) {
                alert('Order deleted');
                loadOrders();
            }
        }
    }

    // Load on page load
    document.addEventListener('DOMContentLoaded', loadOrders);
</script>