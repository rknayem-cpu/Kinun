<!-- views/cart.ejs -->
<%- include('partials/header', {title: 'Your Cart'}) %>

<main class="min-h-screen p-4 md:p-6">
    <h1 class="text-3xl font-bold text-green-400 mb-6 text-center">üõí Your Shopping Cart</h1>
    
    <% if (isEmpty) { %>
        <div class="text-center py-12">
            <div class="text-6xl mb-4">üõí</div>
            <h2 class="text-2xl text-gray-300 mb-2">Your cart is empty</h2>
            <p class="text-gray-400 mb-6">Add some products to get started!</p>
            <a href="/" class="inline-block bg-green-500 hover:bg-green-600 text-white px-6 py-3 rounded-lg">
                Continue Shopping
            </a>
        </div>
    <% } else { %>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
            <!-- Cart Items -->
            <div class="lg:col-span-2 space-y-4">
                <% cartItems.forEach(item => { %>
                    <% if (item.post) { %>
                    <div class="bg-gray-800 rounded-xl p-4 flex flex-col md:flex-row gap-4">
                        <!-- Product Image -->
                        <img src="<%= item.post.imgUrl %>" 
                             alt="<%= item.post.name %>"
                             class="w-full md:w-32 h-40 object-cover rounded-lg">
                        
                        <!-- Product Details -->
                        <div class="flex-1">
                            <div class="flex justify-between">
                                <h3 class="text-xl font-semibold text-white">
                                    <%= item.post.name %>
                                </h3>
                                <a href="/cart/remove/<%= item.post._id %>" 
                                   class="text-red-400 hover:text-red-300">
                                    ‚úï Remove
                                </a>
                            </div>
                            
                            <p class="text-gray-300 mt-1">
                                Category: <span class="text-orange-400"><%= item.post.category %></span>
                            </p>
                            
                            <!-- Quantity Controls -->
                            <div class="mt-4 flex items-center gap-4">
                                <form action="/cart/update/<%= item.post._id %>" method="POST" class="inline">
                                    <input type="hidden" name="action" value="decrease">
                                    <button type="submit" 
                                            class="w-10 h-10 rounded-full bg-gray-700 hover:bg-gray-600 text-white">
                                        ‚àí
                                    </button>
                                </form>
                                
                                <span class="text-xl text-white font-bold w-10 text-center">
                                    <%= item.quantity %>
                                </span>
                                
                                <form action="/cart/update/<%= item.post._id %>" method="POST" class="inline">
                                    <input type="hidden" name="action" value="increase">
                                    <button type="submit" 
                                            class="w-10 h-10 rounded-full bg-green-600 hover:bg-green-500 text-white">
                                        +
                                    </button>
                                </form>
                                
                                <div class="ml-auto">
                                    <p class="text-lg font-bold text-green-400">
                                        ‡ß≥<%= item.post.price * item.quantity %>
                                    </p>
                                    <p class="text-sm text-gray-400">
                                        ‡ß≥<%= item.post.price %> each
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% } %>
                <% }) %>
            </div>
            
            <!-- Order Summary -->
            <div class="lg:col-span-1">
                <div class="bg-gray-800 rounded-xl p-6 sticky top-4">
                    <h2 class="text-2xl font-bold text-white mb-6">Order Summary</h2>
                    
                    <div class="space-y-3">
                        <div class="flex justify-between">
                            <span class="text-gray-300">Subtotal</span>
                            <span class="text-white">‡ß≥<%= subtotal %></span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-300">Delivery</span>
                            <span class="text-white">‡ß≥60</span>
                        </div>
                        <div class="border-t border-gray-700 pt-3">
                            <div class="flex justify-between text-lg font-bold">
                                <span class="text-white">Total</span>
                                <span class="text-green-400">‡ß≥<%= subtotal + 60 %></span>
                            </div>
                        </div>
                    </div>
                    
                <a href="/checkout">    <button  class="w-full mt-6 bg-red-500 hover:bg-red-600 text-white py-3 rounded-lg font-semibold text-lg">
                        Proceed to Checkout
                    </button></a>
                    
                    <a href="/" 
                       class="block text-center mt-4 text-blue-400 hover:text-blue-300">
                        ‚Üê Continue shopping
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</main>

<%- include('partials/footer') %>