<%- include('partials/header') %>

<main class='p-4 max-w-full '>
 
 <p  class='text-center text-3xl text-white mb-5'><%= orders.length %> Orders</p>
 
 

<div class='grid grid-cols-1 md:grid-cols-3  xl: grid-cols-4 gap-4'>


  <% orders.forEach(order=>{ %>
    <div class='bg-white shadow rounded-lg p-4 mb-4'>
      <!-- Header -->
      <div class='flex justify-between mb-3'>
        <span class='font-bold'>Order #<%= order._id %></span>
        <span class='text-sm <%= order.status === "delivered" ? "text-green-600" : "text-yellow-600" %>'>
          <%= order.status %>
        </span>
      </div>

      <!-- Items -->
      <% let total = 0 %>
      <div class='mb-3'>
        <% order.cart.forEach(item=>{ %>
          <% total += item.price * item.quantity %>
          <div class='flex items-center py-2 border-b'>
            <% if(item.image){ %>
              <img src="<%= item.image %>" class='w-12 h-12 object-cover rounded mr-3'>
            <% } %>
            <div class='flex-1'>
              <p class='font-medium'><%= item.name %></p>
              <div class='flex justify-between text-sm text-gray-600'>
                <span>Qty: <%= item.quantity %> √ó ‡ß≥<%= item.price %></span>
                <span class='font-semibold'>‡ß≥<%= item.price * item.quantity %></span>
              </div>
            </div>
          </div>
        <% }) %>
      </div>

      <!-- Total -->
      <div class='flex justify-between font-bold mb-3'>
        <span>Total</span>
        <span>‡ß≥<%= total %></span>
      </div>

      <!-- Contact -->
      <div class='text-sm text-gray-600 mb-3'>
        <p>üìû <%= order.mobile %></p>
        <p>üìç <%= order.address %></p>
      </div>

      <!-- Confirm Button -->
      <% if(order.status === "pending"){ %>
        <a href="/status/<%= order._id %>" 
                class='w-full block text-center  bg-green-600 
                text-white py-2 rounded hover:bg-green-700'>
          Confirm Order
        </a>
      <% } else{ %>
      <div class="w-full flex justify-between gap-3">
      <a href="/deliver/<%= order._id %>".
                class='w-full block text-center  bg-orange-600
                text-white py-2 rounded hover:bg-orange-700'>
          Deliver order
        </a>
        
        <a href="/cancel/<%= order._id %>".
                class='w-full block text-center  bg-red-600
                text-white py-2 rounded hover:bg-red-700'>
          cancel Order
        </a>
        
        
        </div>
      
      <% } %>
    </div>
  <% }) %>
  
  </div>
</main>

<%- include('partials/footer') %>