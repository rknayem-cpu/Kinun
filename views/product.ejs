<%- include('partials/header') %>

<main class="bg-gray-900 text-white min-h-screen">
    <!-- Product Details -->
    <div class="container mx-auto px-4 py-8">
        <!-- Breadcrumb -->
        <nav class="mb-6">
            <ol class="flex items-center space-x-2 text-gray-400">
                <li><a href="/" class="hover:text-green-400">Home</a></li>
                <li class="text-gray-500">›</li>
                <li><a href="/products" class="hover:text-green-400">Products</a></li>
                <li class="text-gray-500">›</li>
                <li class="text-green-400"><%= post.name %></li>
            </ol>
        </nav>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
            <!-- Product Images -->
            <div>
                <!-- Main Image -->
                <div class="rounded-2xl overflow-hidden mb-4 shadow-2xl">
                    <img src="<%= post.imgUrl || '/images/default-product.jpg' %>" 
                         alt="<%= post.name %>"
                         class="w-full h-auto max-h-[500px] object-cover hover:scale-105 transition-transform duration-500"
                         id="mainImage">
                </div>

                <!-- Image Gallery (if you have multiple images) -->
                <div class="flex gap-3 overflow-x-auto py-2">
                    <img src="<%= post.imgUrl %>" 
                         class="w-20 h-20 object-cover rounded-lg cursor-pointer border-2 border-green-500"
                         onclick="changeImage(this.src)">
                    <!-- Add more images if available -->
                </div>
            </div>

            <!-- Product Info -->
            <div>
                <!-- Category Badge -->
                <div class="mb-4">
                    <span class="inline-block bg-gradient-to-r from-green-500 to-emerald-600 text-white px-4 py-1.5 rounded-full text-sm font-semibold">
                        <%= post.category %>
                    </span>
                </div>

                <!-- Product Name -->
                <h1 class="text-3xl md:text-4xl font-bold mb-3 text-white">
                    <%= post.name %>
                </h1>

                <!-- Rating -->
                <div class="flex items-center mb-6">
                    <div class="flex text-yellow-400 text-lg">
                        ★★★★☆
                    </div>
                    <span class="ml-2 text-gray-400">(4.2 • 124 reviews)</span>
                </div>

                <!-- Price -->
                <div class="mb-6">
                    <div class="text-4xl font-bold text-green-400 mb-1">
                        ৳<%= post.price.toLocaleString() %>
                    </div>
                    <p class="text-gray-400">Inclusive of all taxes</p>
                </div>

                <!-- Description -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-3 text-white">Description</h3>
                    <p class="text-gray-300 leading-relaxed">
                        <%= post.bio || 'High quality product with premium features. Perfect for your needs.' %>
                    </p>
                </div>

                <!-- Features/Highlights -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-3 text-white">Product Highlights</h3>
                    <ul class="space-y-2">
                        <li class="flex items-center text-gray-300">
                            <svg class="w-5 h-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                            Premium quality material
                        </li>
                        <li class="flex items-center text-gray-300">
                            <svg class="w-5 h-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                            Long lasting durability
                        </li>
                        <li class="flex items-center text-gray-300">
                            <svg class="w-5 h-5 text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                            </svg>
                            Easy to use and maintain
                        </li>
                    </ul>
                </div>

            
                    <div class="flex flex-col sm:flex-row gap-4">
                        <!-- Quantity -->


<% if (isLoggedIn) { %>

<a 
onclick="addToCartSimple('<%= post._id %>', this)"
 class="mb-8 block">    <button
                                class="flex-1 bg-gradient-to-r from-red-500 to-red-600 hover:from-green-600 hover:to-emerald-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition-all duration-300 transform hover:scale-[1.02]">
                            <div class="flex items-center justify-center">
                                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                                Add to Cart
                            </div>
                        </button>
                        </a>
                        
                        <script>
function addToCartSimple(productId, button) {
    // Button effect (optional)
    button.style.transform = 'scale(0.98)';

    // Show SweetAlert
    Swal.fire({
        icon: 'success',
        title: '<div class="flex items-center gap-2 justify-center"><i class="fas fa-check-circle text-green-500 text-2xl"></i><span>Added to Cart!</span></div>',
        showConfirmButton: false,
        timer: 2000,
        timerProgressBar: true,
        background: '#ffffff',
        color: '#1f2937',
        width: '350px',
        padding: '1.5rem',
        customClass: {
            popup: 'rounded-2xl shadow-2xl'
        }
    }).then(() => {
        // Redirect after alert closes

        window.location.href = `/cart/${productId}`;

    });
}
</script>
                        
                        
                        
                        
                    <% } else { %>

<span onclick='salert()' class="mb-8 block">    <button
                                class="flex-1 cursor-pointer bg-gradient-to-r from-red-500 to-red-600 hover:from-green-600 hover:to-emerald-700 text-white font-bold py-4 px-8 rounded-lg text-lg transition-all duration-300 transform hover:scale-[1.02]">
                            <div class="flex items-center justify-center">
                                <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                                </svg>
                                Add to Cart
                            </div>
                        </button>
                        </span>


                    <% } %>

                        <!-- Add to Cart Button -->
                        
                    </div>
                

                <!-- Quick Info -->
                <div class="grid grid-cols-2 gap-4">
                    <div class="bg-gray-800/50 p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="text-green-400 mr-3">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-semibold">In Stock</p>
                                <p class="text-sm text-gray-400">Ready to ship</p>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-800/50 p-4 rounded-xl">
                        <div class="flex items-center">
                            <div class="text-green-400 mr-3">
                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                            </div>
                            <div>
                                <p class="font-semibold">Fast Delivery</p>
                                <p class="text-sm text-gray-400">2-3 days</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Related Products (Optional) -->
        <div class="mt-16">
            <h2 class="text-2xl font-bold mb-8 text-center">Related Products</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                <!-- Add related products here -->
            </div>
        </div>
    </div>
</main>

<script>
    // Quantity Controls
    function increaseQty() {
        const input = document.getElementById('quantity');
        let value = parseInt(input.value);
        if (value < 10) {
            input.value = value + 1;
        }
    }

    function decreaseQty() {
        const input = document.getElementById('quantity');
        let value = parseInt(input.value);
        if (value > 1) {
            input.value = value - 1;
        }
    }

    // Image Gallery
    function changeImage(src) {
        document.getElementById('mainImage').src = src;
    }

    // Add to Cart Animation
    document.querySelector('form').addEventListener('submit', function(e) {
        const button = this.querySelector('button[type="submit"]');
        button.innerHTML = `
            <div class="flex items-center justify-center">
                <svg class="w-6 h-6 mr-2 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Adding...
            </div>
        `;
        button.disabled = true;
    });
</script>

<%- include('partials/footer') %>