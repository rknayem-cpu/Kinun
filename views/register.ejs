<%- include('partials/header') %>

<div class="min-h-screen flex items-center p-1">
    <form method="post" action="/register" class="w-full form  max-w-md bg-gray-800 rounded-xl border border-gray-700 mx-auto p-6 md:p-8">
        <h2 class="text-xl md:text-2xl font-bold text-white text-center mb-4">Create Account</h2>

        <div class="space-y-4">
            <div>
                <label class="block text-sm text-gray-300 mb-1">Name</label>
                <input type="text" name="name"
                       class="w-full px-4 py-2.5 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500"
                       placeholder="Your name">
            </div>

            <div>
                <label class="block text-sm text-gray-300 mb-1">Email</label>
                <input type="email" name="email" id="emailInput" 
                       class="w-full px-4 py-2.5 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500"
                       placeholder="Your email">
            </div>

            <div>
                <label class="block text-sm text-gray-300 mb-1">Address</label>
                <input type="text" name="address"
                       class="w-full px-4 py-2.5 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500"
                       placeholder="Your address">
            </div>

            <div>
                <label class="block text-sm text-gray-300 mb-1">Password</label>
                <input type="password" name="password"
                       class="w-full px-4 py-2.5 bg-gray-700 border border-gray-600 rounded-lg text-white focus:ring-2 focus:ring-blue-500"
                       placeholder="Create password">
            </div>

            <button onclick="saveAndSubmit()"
                    class="w-full bg-blue-600 hover:bg-blue-500 text-white py-2.5 px-4 rounded-lg transition mt-2">
                Create Account
            </button>
            <p class="text-center text-white">Already have account <a class="text-blue-400 hover:underline"  href="/login">Login</a></p>
        </div>
    </form>
</div>

<script>
function saveAndSubmit() {
    // 1. Email local storage ‡¶è save
    const email = document.getElementById('emailInput').value;
    localStorage.setItem('userEmail', email);
    
    // 2. Form submit
    document.querySelector('.form').submit();
}
</script>




