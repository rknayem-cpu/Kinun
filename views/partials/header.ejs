<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>

    <link rel="icon" href="/favicon.ico" type="image/x-icon">
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
    <!-- For modern browsers -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <style>
        @font-face { font-family: 'kal'; src: url('./fonts/kalpurush.ttf'); }
        body,html { font-family: 'kal', times;
               scroll-behavior:smooth;


        }

        .menu-btn div {
            width: 25px;
            height: 3px;
            background: white;
            margin: 4px 0;
            transition: 0.3s;
        }

        .sidebar {
            position: fixed;
            top: 0;
            right: -100%;
            height: 100vh;
            width: 250px;
            background: black;
            transition: 0.3s;
            z-index: 1000;
            box-shadow: -4px 0 12px rgba(0,0,0,0.2);
        }

        .sidebar.open { right: 0; }
        .open .menu-btn div:nth-child(1) { transform: rotate(45deg) translate(6px, 6px); }
        .open .menu-btn div:nth-child(2) { opacity: 0; }
        .open .menu-btn div:nth-child(3) { transform: rotate(-45deg) translate(7px, -6px); }

        .nav-item { transition: 0.2s; }
        .nav-item:hover { background: rgba(0,0,0,0.2); }

        /* Cart badge styles */
        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: red;
            color: white;
            border-radius: 50%;
            width: 18px;
            height: 18px;
            font-size: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body class="bg-gray-800">
    <!-- Navbar -->
    <nav class="w-full p-3 bg-orange-600 sticky top-0 z-50">
        <div class="flex items-center justify-between">
            <a href='/' class="text-2xl text-white flex gap-1 items-center"><img class="w-12 rounded-md"  src="/images/klogo.jpg"></a>
            <div class="flex items-center gap-4">
                <!-- Cart Icon with Badge -->
                <div class="relative">
                    <% if (isLoggedIn) { %>
                        <a href='/cart' class="text-2xl text-white relative">
                            <i class="fas fa-shopping-cart"></i>
                            <% if (cartCount && cartCount > 0) { %>
                                <span class="cart-badge"><%= cartCount %></span>
                            <% } %>
                        </a>
                    <% } else { %>
                        <span onclick="salert()" class="text-2xl text-white cursor-pointer">
                            <i class="fas fa-shopping-cart"></i>
                        </span>
                    <% } %>
                </div>

                <button class="menu-btn relative bottom-[2.4px] cursor-pointer p-2" onclick="toggleMenu()">
                    <div></div>
                    <div></div>
                    <div></div>
                </button>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <ul class="w-full pt-16 text-white">
            <li class="nav-item text-lime-400 p-4"><a href="/" class="text-xl flex items-center gap-3"><i class="fas fa-home"></i>Home</a></li>
            <% if (isLoggedIn) { %>
                <li class="nav-item text-red-400  p-4"><a href="/profile" class="text-xl flex items-center gap-3"><i class="fas fa-user"></i>Profile</a></li>
            <% } else { %>
                <li class="nav-item text-red-400 p-4"><a href="/login" class="text-xl flex items-center gap-3"><i class="fas fa-key"></i>Login</a></li>
            <% } %>

            <li class="nav-item text-teal-300  p-4"><a href="/search" class="text-xl flex items-center gap-3"><i class="fas fa-search"></i>Search</a></li>
            
            <li class="nav-item text-teal-300  p-4">
            <a href="/order-track" 
            class="text-xl flex items-center gap-3">
            <i class="fas fa-box-open"></i>Order-track</a>
            </li>

<li class="nav-item text-green-600  p-4">
            <a href="/viewcategory".
            class="text-xl flex items-center gap-3">
            <i class="fa fa-list-alt"></i>Categorys</a>
            </li>





        </ul>
    </div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <script>
        function toggleMenu() {
            document.getElementById('sidebar').classList.toggle('open');
        }

        // Close sidebar when clicking outside
        document.addEventListener('click', (e) => {
            const sidebar = document.getElementById('sidebar');
            const menuBtn = document.querySelector('.menu-btn');

            if (!sidebar.contains(e.target) && !menuBtn.contains(e.target)) {
                sidebar.classList.remove('open');
            }
        });

        function salert() {
            Swal.fire('Please! Login first', '', 'info');
        }
    </script>